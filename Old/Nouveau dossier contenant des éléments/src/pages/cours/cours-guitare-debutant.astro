---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SEO,heroData,timelineData,frustrationsData,ValeurUnique,PreuveSociale,Benefices,CTA,FAQ } from '../../data/cours-guitare-debutant.js';



---

<Layout 
  title={SEO.title}
  description={SEO.description}
  ogImage={SEO.ogImage}
>
<div class="theme-guitar">
    <Header />
    
 
</Layout>

<style>
  /* Hero Section */
  .hero {
    min-height: 80vh;
    position: relative;
    display: flex;
    align-items: center;
    padding: 4rem 0 2rem;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    background-image: url('https://test.musique-facile.fr/images/cours_de_guitare.jpg');
    background-size: cover;
    background-position: center;
    z-index: -1;
  }

  .gradient-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(136, 190, 0, 0.9) 0%, rgba(136, 190, 0, 0.7) 100%);
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-badge {
    display: inline-block;
    background: var(--theme-current);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .hero h1 {
    font-size: 4rem;
    color: white;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .cta-group {
    display: flex;
    gap: 1rem;
  }

  .course-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-top: 2rem;
    background: rgba(255, 255, 255, 0.1);
    padding: 1.5rem;
    border-radius: var(--border-radius);
    backdrop-filter: blur(10px);
  }

  .stat-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: white;
  }

  .stat-icon {
    font-size: 2rem;
    background: rgba(255, 255, 255, 0.2);
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .stat-content {
    display: flex;
    flex-direction: column;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: bold;
  }

  .stat-label {
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
    /* Styles communs aux boutons */
    .btn {
        display: inline-block;
        padding: 1rem 2rem;
        border-radius: var(--border-radius);
        text-decoration: none;
        font-weight: 600;
        transition: all var(--transition-base);
        text-align: center; /* Pour centrer le texte dans les boutons */
    }

    .btn-primary {
        background: var(--theme-current);
        color: white;
        border: none; /* Pour s'assurer qu'il n'y a pas de bordure sur le bouton principal */
    }

    .btn-primary:hover {
        background: var(--theme-current-dark);
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(136, 190, 0, 0.3);
    }
  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 3rem;
    }
    .cta-group {
        flex-direction: column;
    }
    .course-stats {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .stat-item {
        justify-content: center;
    }
  }
  /* Timeline Section */
  .timeline {
    padding: 8rem 0;
    background: var(--bg-light);
  }

  .timeline-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 4rem;
    color: var(--theme-current);
  }

  .timeline-wrapper {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
  }

  .timeline-wrapper::before {
    content: '';
    position: absolute;
    left: 50px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--theme-current);
  }

  .timeline-item {
    display: flex;
    gap: 2rem;
    margin-bottom: 4rem;
    position: relative;
  }

  .timeline-number {
    width: 100px;
    height: 100px;
    background: var(--theme-current);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: bold;
    flex-shrink: 0;
    box-shadow: 0 0 0 8px var(--bg-light), 0 0 0 10px var(--theme-current);
  }

  .timeline-content {
    flex: 1;
    background: white;
    border-radius: var(--border-radius);
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .timeline-header h3 {
    color: var(--theme-current);
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .timeline-objective {
    color: var(--color-dark);
    opacity: 0.8;
    font-style: italic;
    margin-bottom: 1.5rem;
  }

  .timeline-body {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 2rem;
  }

  .timeline-image-wrapper {
    position: relative;
  }

  .timeline-image {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: var(--border-radius);
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .timeline-image:hover {
    transform: scale(1.05);
  }

  .timeline-details {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .timeline-details li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.8rem;
    line-height: 1.6;
  }

  .timeline-details li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--theme-current);
  }

  /* Modal Styles */
  .modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    z-index: 1000;
    backdrop-filter: blur(5px);
  }

  .modal.active {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .modal-content {
    position: relative;
    max-width: 90%;
    max-height: 90vh;
  }

  .modal-content img {
    max-width: 100%;
    max-height: 90vh;
    object-fit: contain;
  }

  .close-modal {
    position: absolute;
    top: -40px;
    right: 0;
    color: white;
    font-size: 2rem;
    cursor: pointer;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .timeline-body {
      grid-template-columns: 1fr;
    }

    .timeline-wrapper::before {
      left: 30px;
    }

    .timeline-number {
      width: 60px;
      height: 60px;
      font-size: 1.5rem;
      box-shadow: 0 0 0 4px var(--bg-light), 0 0 0 6px var(--theme-current);
    }
  }


  /* Frustrations Section */
  .frustrations {
    padding: 6rem 0;
    background: var(--bg-light);
    position: relative;
    overflow: hidden;
  }

  .frustrations::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-primary);
  }

  .frustrations-title {
    text-align: center;
    font-size: 2.5rem;
    max-width: 800px;
    margin: 0 auto 3rem;
    color: var(--theme-current);
    line-height: 1.3;
  }

  .frustrations-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto 3rem;
  }

  .frustration-card {
    background: white;
    padding: 2rem;
    border-radius: var(--border-radius);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    gap: 1.5rem;
    transition: transform 0.3s ease;
  }

  .frustration-card:hover {
    transform: translateY(-5px);
  }

  .frustration-icon {
    font-size: 2.5rem;
    background: var(--bg-light);
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .frustration-text {
    font-size: 1.1rem;
    color: var(--color-dark);
    margin: 0;
    line-height: 1.5;
  }

  .solution-banner {
    background: var(--theme-current);
    padding: 2rem;
    border-radius: var(--border-radius);
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    transform: translateY(20px);
    animation: float 3s ease-in-out infinite;
  }

  .solution-text {
    color: white;
    font-size: 1.4rem;
    font-weight: 600;
    margin: 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @media (max-width: 768px) {
    .frustrations-title {
      font-size: 2rem;
      padding: 0 1rem;
    }

    .frustrations-grid {
      grid-template-columns: 1fr;
      padding: 0 1rem;
    }

    .frustration-card {
      padding: 1.5rem;
    }

    .solution-banner {
      margin: 0 1rem;
    }

    .solution-text {
      font-size: 1.2rem;
    }
  }

/* Valeur Unique Section */
.valeur-unique {
  padding: 8rem 0;
  background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
  position: relative;
  overflow: hidden;
}

.valeur-unique::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  opacity: 0.1;
}

.valeur-unique-content {
  position: relative;
  z-index: 1;
  max-width: 1000px;
  margin: 0 auto;
  text-align: center;
}

.valeur-unique h2 {
  color: white;
  font-size: 3rem;
  margin-bottom: 1.5rem;
  background: linear-gradient(135deg, var(--theme-current) 0%, var(--theme-current-light) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.valeur-unique .description {
  color: rgba(255, 255, 255, 0.9);
  font-size: 1.4rem;
  max-width: 800px;
  margin: 0 auto 4rem;
  line-height: 1.6;
}

.avantages-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
}

.avantage-card {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--border-radius);
  padding: 2rem;
  transition: all 0.3s ease;
}

.avantage-card:hover {
  transform: translateY(-5px);
  background: rgba(255, 255, 255, 0.08);
  border-color: var(--theme-current);
}

.avantage-icon {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  display: block;
}

.avantage-text {
  color: white;
  font-size: 1.1rem;
  line-height: 1.5;
  margin: 0;
}

@media (max-width: 768px) {
  .valeur-unique h2 {
    font-size: 2.2rem;
  }

  .valeur-unique .description {
    font-size: 1.2rem;
    padding: 0 1rem;
  }

  .avantages-grid {
    grid-template-columns: 1fr;
    padding: 0 1rem;
  }
}

