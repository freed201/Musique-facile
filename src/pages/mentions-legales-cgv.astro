---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getEntry } from 'astro:content';

const legalContent = await getEntry('legal', 'mentions-legales-cgv');
const { Content } = await legalContent.render();

// Construction du schema.org
const schema = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Mentions Légales et CGV - Musique Facile",
  "description": "Mentions légales et conditions générales de vente de Musique Facile",
  "publisher": {
    "@type": "Organization",
    "name": "Musique Facile",
    "legalName": "Musique Facile SASU"
  },
  "dateModified": legalContent.data.lastUpdated
};
---

<Layout title="Mentions Légales et CGV - Musique Facile">
  <Header />
  
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <main>
    <section class="legal-hero">
      <div class="container">
        <h1>Mentions Légales et CGV</h1>
        <p class="subtitle">Dernière mise à jour : {new Date(legalContent.data.lastUpdated).toLocaleDateString('fr-FR', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}</p>
      </div>
    </section>

    <section class="legal-content">
      <div class="container">
          

          <article class="legal-text">
            <Content />
          </article>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .legal-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(135deg, var(--color-dark) 0%, #2a2a2a 100%);
    color: white;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .legal-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.1;
  }

  .legal-hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--theme-current) 0%, var(--theme-current-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .legal-content {
    padding: 4rem 0;
    background: var(--bg-light);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 3rem;
  }

  .table-of-contents {
    position: relative;
  }

  .toc-sticky {
    position: sticky;
    top: 2rem;
    background: white;
    padding: 1.5rem;
    border-radius: var(--border-radius);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .toc-sticky h2 {
    font-size: 1.5rem;
    color: var(--theme-current);
    margin-bottom: 1rem;
  }

  .toc-sticky ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-sticky li {
    margin-bottom: 0.5rem;
  }

  .toc-sticky a {
    color: var(--color-dark);
    text-decoration: none;
    transition: all 0.3s ease;
    display: block;
    padding: 0.5rem;
    border-radius: var(--border-radius);
  }

  .toc-sticky a:hover {
    background: rgba(var(--theme-current-rgb), 0.1);
    color: var(--theme-current);
    transform: translateX(5px);
  }

  .legal-text {
    background: white;
    padding: 3rem;
    border-radius: var(--border-radius);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .legal-text :global(h1) {
    font-size: 2.5rem;
    color: var(--theme-current);
    margin-bottom: 2rem;
  }

  .legal-text :global(h2) {
    font-size: 2rem;
    color: var(--color-dark);
    margin: 3rem 0 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--theme-current);
  }

  .legal-text :global(h3) {
    font-size: 1.5rem;
    color: var(--theme-current);
    margin: 2rem 0 1rem;
  }

  .legal-text :global(h4) {
    font-size: 1.2rem;
    color: var(--color-dark);
    margin: 1.5rem 0 1rem;
  }

  .legal-text :global(p) {
    color: var(--color-dark);
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .legal-text :global(ul) {
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .legal-text :global(li) {
    color: var(--color-dark);
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .legal-text :global(strong) {
    color: var(--theme-current);
  }

  @media (max-width: 992px) {
    .content-wrapper {
      grid-template-columns: 1fr;
    }

    .table-of-contents {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .legal-hero h1 {
      font-size: 2.5rem;
    }

    .legal-text {
      padding: 1.5rem;
    }

    .legal-text :global(h1) {
      font-size: 2rem;
    }

    .legal-text :global(h2) {
      font-size: 1.8rem;
    }

    .legal-text :global(h3) {
      font-size: 1.3rem;
    }
  }
</style>