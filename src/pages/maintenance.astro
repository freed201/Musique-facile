<style>
  .maintenance {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-dark) 0%, #2a2a2a 100%);
    color: white;
    padding: 2rem;
  }

  .container {
    max-width: 600px;
    margin: 0 auto;
  }

  .maintenance-content {
    text-align: center;
    background: rgba(255, 255, 255, 0.1);
    padding: 3rem;
    border-radius: var(--border-radius);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .icon-wrapper {
    width: 100px;
    height: 100px;
    background: var(--theme-current);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 2rem;
    animation: spin 10s linear infinite;
  }

  .maintenance-icon {
    font-size: 3rem;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, var(--theme-current) 0%, var(--theme-current-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .eta {
    font-size: 1.4rem;
    font-weight: 600;
    margin: 2rem 0;
  }

  .social-links {
    margin-top: 3rem;
  }

  .social-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .social-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius);
    text-decoration: none;
    color: white;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    transform: translateY(-3px);
    background: rgba(255, 255, 255, 0.2);
  }

  .social-link img {
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease;
  }

  .social-link:hover img {
    transform: scale(1.2);
  }

  @media (max-width: 600px) {
    .maintenance-content {
      padding: 2rem;
    }

    h1 {
      font-size: 2rem;
    }

    .social-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>