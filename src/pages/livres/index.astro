<!-- src/pages/livres/index.astro -->
---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

// Récupérer tous les livres
const allBooks = await getCollection('livres');
const sortedBooks = allBooks.sort((a, b) => 
  new Date(b.data.datePublished).getTime() - new Date(a.data.datePublished).getTime()
);

// Schema.org pour la liste des livres
const booksSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": sortedBooks.map((book, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "Book",
      "name": book.data.title,
      "description": book.data.description,
      "author": {
        "@type": "Person",
        "name": book.data.author
      },
      "isbn": book.data.isbn,
      "numberOfPages": book.data.pages,
      "inLanguage": book.data.language,
      "image": book.data.coverImage,
      "offers": {
        "@type": "Offer",
        "price": book.data.price.replace(/[^0-9.]/g, ''),
        "priceCurrency": "EUR",
        "availability": "https://schema.org/InStock"
      }
    }
  }))
};
---

<Layout title="Nos Livres | Musique Facile">
  <Header />
  
  <script type="application/ld+json" set:html={JSON.stringify(booksSchema)} />

  <main>
    <section class="books-hero">
      <div class="container">
        <h1>Nos Livres</h1>
        <p class="subtitle">Découvrez notre collection de livres pour progresser en musique</p>
      </div>
    </section>

    <section class="books-grid">
      <div class="container">
        <div class="books-wrapper">
          {sortedBooks.map(book => (
            <article class="book-card">
              <a href={`/livres/${book.slug}`} class="book-link">
                <div class="book-cover">
                  <img 
                    src={book.data.coverImage} 
                    alt={`Couverture du livre ${book.data.title}`}
                    width="300"
                    height="450"
                    loading="lazy"
                  />
                </div>
                <div class="book-content">
                  <h2>{book.data.title}</h2>
                  <p class="book-description">{book.data.description}</p>
                  <div class="book-meta">
                    <span class="book-price">{book.data.price}</span>
                    <span class="book-details">{book.data.pages} pages</span>
                  </div>
                  <span class="cta-button">
                    En savoir plus
                    <span class="arrow">→</span>
                  </span>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .books-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(135deg, var(--color-dark) 0%, #2a2a2a 100%);
    color: white;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .books-hero h1 {
  font-size: 3.5rem;
  margin-bottom: 1rem;
  /* background: linear-gradient(135deg, var(--color-primary) 0%, var(--theme-main-light) 100%); */
  /* -webkit-background-clip: text; */
  /* -webkit-text-fill-color: transparent; */
  color: #fff; /* Force le texte en blanc */
  }

  .subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9);
    max-width: 600px;
    margin: 0 auto;
  }

  .books-grid {
    padding: 4rem 0;
    background: var(--bg-light);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .books-wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .book-card {
    background: white;
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .book-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .book-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .book-cover {
    position: relative;
    padding-top: 150%;
    overflow: hidden;
  }

  .book-cover img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .book-card:hover .book-cover img {
    transform: scale(1.05);
  }

  .book-content {
    padding: 1.5rem;
  }

  .book-content h2 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--color-dark);
    line-height: 1.4;
  }

  .book-description {
    font-size: 0.95rem;
    color: var(--color-dark);
    opacity: 0.8;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .book-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .book-price {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--theme-current);
  }

  .book-details {
    font-size: 0.9rem;
    color: var(--color-dark);
    opacity: 0.7;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--theme-current);
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .arrow {
    transition: transform 0.3s ease;
  }

  .book-card:hover .arrow {
    transform: translateX(5px);
  }

  @media (max-width: 768px) {
    .books-hero h1 {
      font-size: 2.5rem;
    }

    .books-wrapper {
      grid-template-columns: 1fr;
    }
  }
</style>
