      gap: 2rem;
    }

    .upsell-card {
      background: white;
      border-radius: 20px;
      padding: 2rem;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      position: relative;
      overflow: hidden;
    }

    .upsell-card.featured {
      border: 3px solid #88be00;
      transform: scale(1.02);
    }

    .upsell-badge {
      position: absolute;
      top: 1.5rem;
      right: -4rem;
      background: #ff6b6b;
      color: white;
      padding: 0.5rem 3rem;
      transform: rotate(45deg);
      font-weight: 700;
    }

    .price-box {
      display: flex;
      align-items: baseline;
      gap: 1rem;
      margin: 1.5rem 0;
    }

    .old-price {
      text-decoration: line-through;
      color: #888;
      font-size: 1.1rem;
    }

    .new-price {
      font-size: 2.2rem;
      font-weight: 700;
      color: #1a1a1a;
    }

    .discount {
