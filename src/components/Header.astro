      </button>

      <ul class="nav-menu">
        {menuItems.map(item => (
          <li class="nav-item">
            {item.submenu ? (
              <div class="nav-dropdown">
                <a 
                  href={item.url} 
                  class="nav-link has-submenu"
                >
                  <img src={item.icon} alt={`Ic√¥ne ${item.text}`} class="nav-icon" width="20" height="20" />
                  <span>{item.text}</span>
                  <span class="dropdown-arrow">‚ñº</span>
                </a>
                <ul class="submenu">
                  {item.submenu.map(subitem => (
                    <li>
                      <a href={subitem.url} class="submenu-link">
                        <span class="submenu-icon">{subitem.icon}</span>
                        {subitem.text}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ) : (
              <a 
                href={item.url} 
                class="nav-link"
                {...item.external ? { target: "_blank", rel: "noopener noreferrer" } : {}}
              >
                <img src={item.icon} alt={`Ic√¥ne ${item.text}`} class="nav-icon" width="20" height="20" />
                <span>{item.text}</span>
