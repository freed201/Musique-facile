---
/**
 * HeroModern.astro
 * Hero section modernis√©e - Design √©pur√© avec 1 CTA principal
 * Remplace l'ancien Hero.astro surcharg√©
 */

interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaUrl?: string;
  videoUrl?: string;
  heroImage?: string;
}

const {
  title = "Apprenez la musique en 15 min par jour",
  subtitle = "Rejoignez 80 000 musiciens qui ont transform√© leur passion en r√©alit√© avec notre m√©thode progressive.",
  ctaText = "Essayer gratuitement",
  ctaUrl = "/cours",
  videoUrl = "#",
  heroImage = "/images/cours-piano-guitare-ukulele.webp"
} = Astro.props;
---

<section class="hero-modern">
  <div class="hero-background">
    <img src="/images/hero.jpg" alt="" class="hero-bg-image" aria-hidden="true" />
    <div class="hero-gradient"></div>
    <div class="hero-pattern"></div>
  </div>

  <div class="hero-container">
    <div class="hero-content">
      <!-- Badge de confiance -->
      <div class="hero-badge">
        <span class="badge-icon">‚òÖ</span>
        <span class="badge-text">4.7/5 sur 2 847 avis</span>
      </div>

      <!-- Titre principal -->
      <h1 class="hero-title">{title}</h1>

      <!-- Sous-titre -->
