      <!-- Groupe CTA -->
      <div class="hero-cta-group">
        <a href={ctaUrl} class="btn-primary">
          <span>{ctaText}</span>
          <svg class="btn-arrow" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M4 10h12m0 0l-4-4m4 4l-4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        <button class="btn-secondary" data-video={videoUrl}>
          <svg class="btn-play" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M8 5v10l7-5-7-5z" fill="currentColor"/>
          </svg>
          <span>Voir la d√©mo</span>
        </button>
      </div>

      <!-- Micro-rassurances -->
      <div class="hero-reassurance">
        <span class="reassurance-item">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M13.5 4.5l-7 7L3 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Sans carte bancaire
        </span>
        <span class="reassurance-item">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M13.5 4.5l-7 7L3 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Acc√®s imm√©diat
        </span>
        <span class="reassurance-item">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M13.5 4.5l-7 7L3 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Garantie 15 jours
        </span>
      </div>
    </div>

    <!-- Image et Stats -->
    <div class="hero-visual">
      <img
        src={heroImage}
        alt="Fred Fieff√© enseigne la guitare, le piano et l'ukul√©l√© en ligne"
        class="hero-image"
        width="600"
        height="450"
        loading="eager"
      />
      <div class="hero-stats">
        <div class="stat-card">
          <span class="stat-number">80K+</span>
          <span class="stat-label">√âl√®ves form√©s</span>
        </div>
        <div class="stat-card">
          <span class="stat-number">1400+</span>
          <span class="stat-label">Vid√©os HD</span>
        </div>
        <div class="stat-card">
          <span class="stat-number">95%</span>
          <span class="stat-label">Satisfaction</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Instruments flottants (d√©coration) -->
  <div class="hero-instruments" aria-hidden="true">
    <span class="instrument instrument-guitar">üé∏</span>
    <span class="instrument instrument-piano">üéπ</span>
    <span class="instrument instrument-ukulele">ü™ï</span>
  </div>
</section>

<style>
  .hero-modern {
    position: relative;
    min-height: auto;
    display: flex;
    align-items: center;
    overflow: hidden;
    padding: calc(var(--space-20) + 60px) var(--space-4) var(--space-12);
  }

  /* Background */
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero-bg-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(10, 22, 40, 0.9) 0%,
      rgba(26, 39, 68, 0.85) 50%,
      rgba(13, 34, 51, 0.9) 100%
    );
  }

  .hero-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(
      circle at 1px 1px,
      rgba(255, 255, 255, 0.05) 1px,
      transparent 0
    );
    background-size: 40px 40px;
  }

  /* Container */
  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero-container {
      grid-template-columns: 1.2fr 0.8fr;
    }
  }

  /* Content */
  .hero-content {
    text-align: center;
  }

  @media (min-width: 1024px) {
    .hero-content {
      text-align: left;
    }
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: rgba(0, 194, 142, 0.15);
    border: 1px solid rgba(0, 194, 142, 0.3);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    margin-bottom: var(--space-6);
  }

  .badge-icon {
    color: #fbbf24;
    font-size: 1rem;
  }

  .badge-text {
    color: rgba(255, 255, 255, 0.9);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
  }

  /* Title */
  .hero-title {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: white;
    margin-bottom: var(--space-6);
    letter-spacing: var(--tracking-tight);
  }

  /* Subtitle */
  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    line-height: var(--leading-relaxed);
    color: rgba(255, 255, 255, 0.75);
    margin-bottom: var(--space-8);
    max-width: 540px;
  }

  @media (min-width: 1024px) {
    .hero-subtitle {
      margin-left: 0;
      margin-right: auto;
    }
  }

  @media (max-width: 1023px) {
    .hero-subtitle {
      margin-left: auto;
      margin-right: auto;
    }
  }

  /* CTA Group */
  .hero-cta-group {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .hero-cta-group {
      justify-content: flex-start;
    }
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-8);
    background: var(--brand-500);
    color: white;
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    text-decoration: none;
    border-radius: var(--radius-lg);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 194, 142, 0.4);
  }

  .btn-primary:hover {
    background: var(--brand-600);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 194, 142, 0.5);
  }

  .btn-arrow {
    transition: transform 0.3s ease;
  }

  .btn-primary:hover .btn-arrow {
    transform: translateX(4px);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-6);
    background: rgba(255, 255, 255, 0.1);
    color: white;
    font-family: var(--font-heading);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    text-decoration: none;
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 255, 255, 0.2);
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .btn-play {
    width: 20px;
    height: 20px;
  }

  /* Reassurance */
  .hero-reassurance {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4) var(--space-6);
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .hero-reassurance {
      justify-content: flex-start;
    }
  }

  .reassurance-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--text-sm);
  }

  .reassurance-item svg {
    color: var(--brand-400);
    flex-shrink: 0;
  }

  /* Visual (Image + Stats) */
  .hero-visual {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    align-items: center;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    height: auto;
    border-radius: var(--radius-2xl);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
    object-fit: contain;
    object-position: top center;
  }

  @media (max-width: 1023px) {
    .hero-image {
      display: none;
    }
  }

  /* Stats */
  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
    width: 100%;
  }

  @media (min-width: 1024px) {
    .hero-stats {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-4);
    }
  }

  .stat-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-xl);
    padding: var(--space-4) var(--space-6);
    text-align: center;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  @media (min-width: 1024px) {
    .stat-card {
      padding: var(--space-6) var(--space-8);
    }
  }

  .stat-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--brand-500);
    transform: translateY(-2px);
  }

  .stat-number {
    display: block;
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    font-weight: var(--font-bold);
    color: var(--brand-400);
    line-height: 1;
    margin-bottom: var(--space-1);
  }

  .stat-label {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.6);
  }

  /* Instruments d√©coratifs */
  .hero-instruments {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .instrument {
    position: absolute;
    font-size: 4rem;
    opacity: 0.1;
    animation: float 6s ease-in-out infinite;
  }

  .instrument-guitar {
    top: 15%;
    right: 5%;
    animation-delay: 0s;
  }

  .instrument-piano {
    bottom: 20%;
    right: 15%;
    animation-delay: 2s;
  }

  .instrument-ukulele {
    top: 60%;
    left: 5%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  /* Responsive mobile */
  @media (max-width: 640px) {
    .hero-modern {
      padding: var(--space-16) var(--space-4) var(--space-8);
    }

    .hero-cta-group {
      flex-direction: column;
      width: 100%;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      justify-content: center;
    }

    .stat-card {
      padding: var(--space-3) var(--space-2);
    }

    .stat-number {
      font-size: 1.25rem;
    }

    .stat-label {
      font-size: var(--text-xs);
    }

    .hero-instruments {
      display: none;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .instrument {
      animation: none;
    }

    .btn-primary:hover,
    .btn-secondary:hover,
    .stat-card:hover {
      transform: none;
    }
  }
</style>

<script>
  // Video modal handler (√† connecter avec un player)
  document.querySelectorAll('.btn-secondary[data-video]').forEach(btn => {
    btn.addEventListener('click', () => {
      const videoUrl = btn.getAttribute('data-video');
      if (videoUrl && videoUrl !== '#') {
        // Ouvrir modal vid√©o ou naviguer
        console.log('Open video:', videoUrl);
      }
    });
  });
</script>
