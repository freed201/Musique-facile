<style>
  /* Full Variant */
  .quiz-cta-section {
    padding: 6rem 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    position: relative;
    overflow: hidden;
  }

  .quiz-cta-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.1;
  }

  .quiz-cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    color: white;
  }

  .quiz-cta-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .quiz-cta-title {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    color: white;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  .quiz-cta-description {
    font-size: 1.3rem;
    margin-bottom: 3rem;
    opacity: 0.95;
    line-height: 1.6;
  }

  .quiz-cta-features {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    backdrop-filter: blur(10px);
  }

  .feature-icon {
    font-size: 1.5rem;
  }

  .feature-text {
    font-weight: 500;
  }

  .quiz-cta-button {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    background: white;
    color: #667eea;
    padding: 1.5rem 3rem;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 700;
    font-size: 1.3rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    margin-bottom: 2rem;
  }

  .quiz-cta-button:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
  }

  .button-arrow {
    transition: transform 0.3s ease;
  }

  .quiz-cta-button:hover .button-arrow {
    transform: translateX(5px);
  }

  .quiz-cta-social-proof {
    font-size: 1rem;
    opacity: 0.9;
    margin: 0;
  }

  /* Compact Variant */
  .quiz-cta-compact {
    display: flex;
    align-items: center;
    gap: 2rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 2rem;
    border-radius: var(--border-radius);
    color: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .compact-icon {
    font-size: 3rem;
    flex-shrink: 0;
  }

  .compact-text {
    flex: 1;
  }

  .compact-text h3 {
    font-size: 1.5rem;
    margin: 0 0 0.5rem;
    color: white;
  }

  .compact-text p {
    margin: 0;
    opacity: 0.9;
    font-size: 1rem;
  }

  .compact-button {
    background: white;
    color: #667eea;
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .compact-button:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
  }

  @media (max-width: 768px) {
    .quiz-cta-title {
      font-size: 2rem;
    }

    .quiz-cta-description {
      font-size: 1.1rem;
    }

    .quiz-cta-features {
      flex-direction: column;
      gap: 1rem;
    }

    .quiz-cta-button {
      width: 100%;
      justify-content: center;
      padding: 1.25rem 2rem;
      font-size: 1.1rem;
    }

    .quiz-cta-compact {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .compact-button {
      width: 100%;
    }
  }
</style>
