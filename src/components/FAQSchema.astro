---
interface FAQ {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQ[];
  showVisual?: boolean;
}

const { faqs, showVisual = true } = Astro.props;

// Construire le schema.org FAQPage
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<!-- Schema.org JSON-LD -->
<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

<!-- Visual FAQ Section (optional) -->
{showVisual && faqs.length > 0 && (
  <section class="faq-section">
    <div class="container">
      <h2 class="faq-title">❓ Questions Fréquentes</h2>

      <div class="faq-list">
        {faqs.map((faq, index) => (
          <details class="faq-item" open={index === 0}>
            <summary class="faq-question">
              <span class="question-icon">❓</span>
              <span class="question-text">{faq.question}</span>
              <span class="toggle-icon">▼</span>
            </summary>
            <div class="faq-answer">
              <p set:html={faq.answer} />
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>
)}

<style>
  .faq-section {
    padding: 4rem 0;
    background: white;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .faq-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--color-dark);
    background: linear-gradient(135deg, var(--theme-current), var(--theme-current-light));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .faq-item {
    background: var(--bg-light);
    border-radius: var(--border-radius);
    padding: 0;
    overflow: hidden;
    border: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    border-color: var(--theme-current);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .faq-item[open] {
    border-color: var(--theme-current);
  }

  .faq-question {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    cursor: pointer;
    user-select: none;
    list-style: none;
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-dark);
    transition: background 0.3s ease;
  }

  .faq-question:hover {
    background: rgba(0, 0, 0, 0.03);
  }

  /* Hide default marker */
  .faq-question::-webkit-details-marker {
    display: none;
  }

  .question-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .question-text {
    flex: 1;
  }

  .toggle-icon {
    font-size: 0.8rem;
    transition: transform 0.3s ease;
    flex-shrink: 0;
    color: var(--theme-current);
  }

  .faq-item[open] .toggle-icon {
    transform: rotate(180deg);
  }

  .faq-answer {
    padding: 0 1.5rem 1.5rem 4rem;
    color: var(--color-dark);
    opacity: 0.9;
    line-height: 1.8;
    font-size: 1.05rem;
  }

  .faq-answer p {
    margin: 0;
  }

  .faq-answer :global(strong) {
    color: var(--theme-current);
  }

  .faq-answer :global(a) {
    color: var(--theme-current);
    text-decoration: underline;
  }

  .faq-answer :global(a:hover) {
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .faq-title {
      font-size: 2rem;
    }

    .faq-question {
      font-size: 1.1rem;
      padding: 1.25rem;
      gap: 0.75rem;
    }

    .question-icon {
      font-size: 1.3rem;
    }

    .faq-answer {
      padding: 0 1.25rem 1.25rem 3rem;
      font-size: 1rem;
    }
  }
</style>

<script>
  // Enhanced accessibility for FAQ items
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach((item, index) => {
      const summary = item.querySelector('.faq-question');

      // Add keyboard navigation
      summary?.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          item.toggleAttribute('open');
        }
      });

      // Add aria attributes
      summary?.setAttribute('role', 'button');
      summary?.setAttribute('aria-expanded', item.hasAttribute('open') ? 'true' : 'false');
      summary?.setAttribute('aria-controls', `faq-answer-${index}`);

      const answer = item.querySelector('.faq-answer');
      answer?.setAttribute('id', `faq-answer-${index}`);
      answer?.setAttribute('role', 'region');
    });

    // Update aria-expanded on toggle
    faqItems.forEach(item => {
      item.addEventListener('toggle', () => {
        const summary = item.querySelector('.faq-question');
        summary?.setAttribute('aria-expanded', item.hasAttribute('open') ? 'true' : 'false');
      });
    });
  });
</script>
