---
/**
 * CoursGrid.astro
 * Grille de cours moderne avec cards color√©es par instrument
 */

interface Course {
  id: string;
  icon: string;
  title: string;
  description: string;
  features: string[];
  url: string;
  theme: 'guitar' | 'piano' | 'ukulele' | 'solfege';
  image: string;
  imageAlt: string;
  stats?: {
    videos: number;
    hours: string;
  };
}

interface Props {
  title?: string;
  subtitle?: string;
  courses?: Course[];
}

const defaultCourses: Course[] = [
  {
    id: 'guitar',
    icon: 'üé∏',
    title: 'Guitare',
    description: 'Ma√Ætrisez la guitare acoustique et √©lectrique avec une m√©thode progressive.',
    features: ['Accords de base', 'Techniques avanc√©es', 'Tablatures & partitions'],
    url: '/cours/cours-de-guitare',
    theme: 'guitar',
    image: '/images/cours/cours-de-guitare.webp',
    imageAlt: 'Cours de guitare en ligne avec Fred Fieff√©',
    stats: { videos: 82, hours: '4h' }
  },
  {
    id: 'piano',
    icon: 'üéπ',
    title: 'Piano',
    description: 'Apprenez le piano avec des cours adapt√©s du d√©butant √† l\'interm√©diaire.',
    features: ['Lecture de notes', 'Coordination mains', 'Morceaux classiques'],
    url: '/cours/cours-de-piano',
    theme: 'piano',
    image: '/images/cours/cours-de-piano.webp',
    imageAlt: 'Cours de piano en ligne avec Fred Fieff√©',
    stats: { videos: 148, hours: '10h' }
  },
  {
    id: 'ukulele',
    icon: 'ü™ï',
    title: 'Ukul√©l√©',
    description: 'L\'instrument parfait pour d√©buter la musique en s\'amusant.',
    features: ['Accords simples', 'Rythmiques', 'Chansons populaires'],
    url: '/cours/cours-de-ukulele',
    theme: 'ukulele',
    image: '/images/cours/cours-de-ukulele.webp',
    imageAlt: 'Cours de ukul√©l√© en ligne avec Fred Fieff√©',
    stats: { videos: 41, hours: '10h' }
  },
  {
    id: 'solfege',
    icon: 'üéº',
    title: 'Solf√®ge',
    description: 'Comprenez la th√©orie musicale pour progresser plus vite.',
