    url: '/cours/cours-de-solfege',
    theme: 'solfege',
    image: '/images/cours/cours-de-solfege.webp',
    imageAlt: 'Cours de solf√®ge en ligne avec Fred Fieff√©',
    stats: { videos: 91, hours: '4h20' }
  }
];

const {
  title = "Choisissez votre instrument",
  subtitle = "Des cours structur√©s pour progresser √† votre rythme, du d√©butant √† l'interm√©diaire.",
  courses = defaultCourses
} = Astro.props;
---

<section class="cours-section">
  <div class="cours-container">
    <!-- Header -->
    <div class="cours-header">
      <h2 class="cours-title">{title}</h2>
      <p class="cours-subtitle">{subtitle}</p>
    </div>

    <!-- Grid -->
    <div class="cours-grid">
      {courses.map((course) => (
        <a href={course.url} class={`cours-card theme-${course.theme}`}>
          <div class="card-image">
            <img src={course.image} alt={course.imageAlt} loading="lazy" />
            <span class="card-icon">{course.icon}</span>
          </div>

          <div class="card-body">
            <div class="card-header">
              <h3 class="card-title">{course.title}</h3>
              {course.stats && (
                <span class="card-badge">{course.stats.videos} vid√©os</span>
              )}
            </div>

            <p class="card-description">{course.description}</p>

            <ul class="card-features">
              {course.features.map((feature) => (
                <li>
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M13.5 4.5l-7 7L3 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>

            <div class="card-footer">
              <span class="card-cta">
                D√©couvrir
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                  <path d="M3 8h10m0 0L9 4m4 4l-4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </div>
          </div>

          <!-- Effet de brillance au hover -->
          <div class="card-shine"></div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .cours-section {
    padding: var(--space-20) var(--space-4);
    background: var(--bg-page);
  }

  .cours-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Header */
  .cours-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .cours-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .cours-subtitle {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Grid */
  .cours-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: var(--space-6);
  }

  @media (min-width: 640px) {
    .cours-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .cours-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Card */
  .cours-card {
    position: relative;
    display: flex;
    flex-direction: column;
    background: var(--bg-card);
    border-radius: var(--radius-xl);
    text-decoration: none;
    color: inherit;
    overflow: hidden;
    transition: all 0.3s ease;
    border: 1px solid var(--border-default);
  }

  .cours-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  /* Card Image */
  .card-image {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .cours-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-image .card-icon {
    position: absolute;
    bottom: var(--space-3);
    left: var(--space-3);
    font-size: 2rem;
    background: var(--bg-card);
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }

  /* Card Body */
  .card-body {
    padding: var(--space-5);
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  /* Th√®mes de couleur */
  .cours-card.theme-guitar {
    --card-color: var(--guitar-500);
    --card-bg: var(--guitar-50);
  }

  .cours-card.theme-piano {
    --card-color: var(--piano-500);
    --card-bg: var(--piano-50);
  }

  .cours-card.theme-ukulele {
    --card-color: var(--ukulele-500);
    --card-bg: var(--ukulele-50);
  }

  .cours-card.theme-solfege {
    --card-color: var(--solfege-500);
    --card-bg: var(--solfege-50);
  }

  .cours-card:hover {
    border-color: var(--card-color);
  }

  /* Card Header */
  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-2);
    gap: var(--space-2);
  }

  .card-badge {
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    color: var(--card-color);
    background: var(--card-bg);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    white-space: nowrap;
  }

  /* Card Content */
  .card-title {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin: 0;
  }

  .card-description {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-3);
    flex-grow: 1;
  }

  /* Features */
  .card-features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-4) 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .card-features li {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  .card-features svg {
    color: var(--card-color);
    flex-shrink: 0;
  }

  /* Footer */
  .card-footer {
    margin-top: auto;
    padding-top: var(--space-3);
    border-top: 1px solid var(--border-default);
  }

  .card-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--card-color);
    transition: gap 0.3s ease;
  }

  .cours-card:hover .card-cta {
    gap: var(--space-3);
  }

  /* Effet shine */
  .card-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      120deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    transition: left 0.5s ease;
    pointer-events: none;
  }

  .cours-card:hover .card-shine {
    left: 100%;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .cours-card:hover {
      transform: none;
    }

    .card-shine {
      display: none;
    }
  }

  /* ========================================
     DARK MODE - System preference
     ======================================== */
  @media (prefers-color-scheme: dark) {
    .cours-section {
      background: #0f172a;
    }

    .cours-title {
      color: #f1f5f9;
    }

    .cours-subtitle {
      color: #cbd5e1;
    }

    .cours-card {
      background: #1e293b;
      border-color: rgba(255, 255, 255, 0.1);
    }

    .card-image .card-icon {
      background: #1e293b;
    }

    .card-title {
      color: #f1f5f9;
    }

    .card-description {
      color: #cbd5e1;
    }

    .card-features li {
      color: #cbd5e1;
    }

    .card-footer {
      border-color: rgba(255, 255, 255, 0.1);
    }
  }

  /* ========================================
     DARK MODE - Manual toggle (data-theme)
     ======================================== */
  :global([data-theme="dark"]) .cours-section {
    background: #0f172a;
  }

  :global([data-theme="dark"]) .cours-title {
    color: #f1f5f9;
  }

  :global([data-theme="dark"]) .cours-subtitle {
    color: #cbd5e1;
  }

  :global([data-theme="dark"]) .cours-card {
    background: #1e293b;
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme="dark"]) .card-image .card-icon {
    background: #1e293b;
  }

  :global([data-theme="dark"]) .card-title {
    color: #f1f5f9;
  }

  :global([data-theme="dark"]) .card-description {
    color: #cbd5e1;
  }

  :global([data-theme="dark"]) .card-features li {
    color: #cbd5e1;
  }

  :global([data-theme="dark"]) .card-footer {
    border-color: rgba(255, 255, 255, 0.1);
  }
</style>
