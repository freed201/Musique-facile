---
/**
 * Sticky CTA Mobile - Apparaît après scroll
 * Optimise la conversion sur mobile
 */
---

<div class="sticky-cta-mobile" id="sticky-cta">
  <div class="sticky-cta-content">
    <div class="sticky-cta-text">
      <span class="sticky-cta-title">Prêt à commencer ?</span>
      <span class="sticky-cta-subtitle">Aucune carte bancaire</span>
    </div>
    <a href="/cours" class="sticky-cta-button">
      Essai Gratuit 7 Jours
      <span class="sticky-cta-arrow">→</span>
    </a>
  </div>
</div>

<style>
  .sticky-cta-mobile {
    display: none; /* Masqué par défaut, afficher uniquement sur mobile */
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 999;
    background: var(--color-white);
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.15);
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border-top: 3px solid var(--theme-current);
  }

  .sticky-cta-mobile.visible {
    transform: translateY(0);
  }

  .sticky-cta-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem 1.5rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .sticky-cta-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .sticky-cta-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-dark);
  }

  .sticky-cta-subtitle {
    font-size: 0.85rem;
    color: var(--color-dark);
    opacity: 0.7;
  }

  .sticky-cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--theme-current);
    color: white;
    padding: 1rem 1.5rem;
    border-radius: var(--border-radius-lg);
    text-decoration: none;
    font-weight: 700;
    font-size: 0.95rem;
    white-space: nowrap;
    transition: all var(--transition-base);
    box-shadow: 0 4px 12px rgba(0, 194, 142, 0.3);
  }

  .sticky-cta-button:hover {
    background: var(--theme-current-dark);
    transform: scale(1.05);
  }

  .sticky-cta-arrow {
    font-size: 1.2rem;
    transition: transform 0.3s ease;
  }

  .sticky-cta-button:hover .sticky-cta-arrow {
    transform: translateX(3px);
  }

  /* Afficher uniquement sur mobile */
  @media (max-width: 768px) {
    .sticky-cta-mobile {
      display: block;
    }
  }

  @media (max-width: 480px) {
    .sticky-cta-content {
      padding: 0.8rem 1rem;
    }

    .sticky-cta-title {
      font-size: 0.9rem;
    }

    .sticky-cta-subtitle {
      font-size: 0.75rem;
    }

    .sticky-cta-button {
      padding: 0.9rem 1.2rem;
      font-size: 0.9rem;
    }
  }
</style>

<script>
  // Afficher le sticky CTA après scroll de 50vh
  document.addEventListener('DOMContentLoaded', () => {
    const stickyCTA = document.getElementById('sticky-cta');
    if (!stickyCTA) return;

    let lastScrollTop = 0;
    const scrollThreshold = window.innerHeight * 0.5; // 50vh

    const handleScroll = () => {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

      // Afficher si scroll > 50vh ET scroll vers le bas
      if (scrollTop > scrollThreshold) {
        stickyCTA.classList.add('visible');
      } else {
        stickyCTA.classList.remove('visible');
      }

      lastScrollTop = scrollTop;
    };

    // Throttle scroll events
    let ticking = false;
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          handleScroll();
          ticking = false;
        });
        ticking = true;
      }
    });
  });
</script>
