---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ExternalResources from '../components/ExternalResources.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import AutoFAQ from '../components/AutoFAQ.astro';
import '@fontsource/poppins';
import '@fontsource/raleway';
import '../styles/global.css';
import '../styles/article.css';

interface Props {
  title: string;
  description: string;
  ogImage: string;
  author: string;
  datePublished: string;
  dateModified: string;
  url: string;
  theme?: 'guitar' | 'piano' | 'ukulele' | 'solfege';
  videos?: Array<{ url: string; title?: string; description?: string; duration?: string; thumbnail?: string }>;
  songInfo?: {
    inBook?: boolean;
    bookPage?: number;
    tempo?: number | string;
    chordCount?: number;
    difficulty?: string;
  };
  showAutoFaq?: boolean;
}

const { title, description, ogImage, author, datePublished, dateModified, url, theme = 'main', videos, songInfo, showAutoFaq = true } = Astro.props;
const siteUrl = 'https://musique-facile.fr';
const ogImageValue = ogImage || '/images/og-default.jpg';
const absoluteOgImage = ogImageValue.startsWith('http') ? ogImageValue : `${siteUrl}${ogImageValue}`;

// Fonction d'enrichissement automatique du titre pour SEO/LLM
const enrichTitle = () => {
  if (!songInfo) return title;

  const parts = [title];

  // Ajouter le nombre d'accords (priorité haute pour différenciation)
  if (songInfo.chordCount) {
    parts.push(`${songInfo.chordCount} Accords`);
  }

  // Ajouter la difficulté si disponible
  if (songInfo.difficulty) {
    parts.push(`Difficulté ${songInfo.difficulty}`);
  }

  // Ajouter l'instrument basé sur le thème
  const instrumentMap = {
    'guitar': 'Guitare',
    'piano': 'Piano',
    'ukulele': 'Ukulélé',
    'solfege': 'Solfège'
  };
  if (theme && theme !== 'main' && instrumentMap[theme]) {
    parts.push(instrumentMap[theme]);
  }

  // Ajouter le tempo si disponible et pas trop long
  if (songInfo.tempo && parts.join(' | ').length < 55) {
    const tempoStr = typeof songInfo.tempo === 'number' ? `${songInfo.tempo} BPM` : songInfo.tempo;
    parts.push(tempoStr);
  }

  return parts.join(' | ');
};

// Fonction d'enrichissement de la meta description
const enrichDescription = () => {
  if (!songInfo) return description;

  let enrichedDesc = '';

  // Ajouter les infos techniques en préfixe
  const infos = [];
  if (songInfo.chordCount) infos.push(`${songInfo.chordCount} accords`);
  if (songInfo.difficulty) infos.push(`niveau ${songInfo.difficulty}`);
  if (songInfo.tempo) {
    const tempoStr = typeof songInfo.tempo === 'number' ? `tempo ${songInfo.tempo} BPM` : songInfo.tempo;
    infos.push(tempoStr);
  }

  if (infos.length > 0) {
    enrichedDesc = `Tutoriel complet : ${infos.join(', ')}. `;
  }

  // Ajouter la description originale (tronquée si nécessaire)
  const remainingChars = 155 - enrichedDesc.length;
  if (description.length > remainingChars) {
    enrichedDesc += description.substring(0, remainingChars - 3) + '...';
  } else {
    enrichedDesc += description;
  }

  return enrichedDesc;
};

// Titres et descriptions enrichis
const pageTitle = enrichTitle();
const pageDescription = enrichDescription();

// Construction des breadcrumbs
const breadcrumbItems = [];

// Ajouter catégorie blog si on a un thème
if (theme && theme !== 'main') {
  const themeMap = {
    'guitar': { name: 'Guitare', url: 'https://musique-facile.fr/blog/guitare' },
    'piano': { name: 'Piano', url: 'https://musique-facile.fr/blog/piano' },
    'ukulele': { name: 'Ukulélé', url: 'https://musique-facile.fr/blog/ukulele' },
    'solfege': { name: 'Solfège', url: 'https://musique-facile.fr/blog/solfege' }
  };

  breadcrumbItems.push(
    { name: 'Blog', url: 'https://musique-facile.fr/blog' },
    themeMap[theme],
    { name: title, url: url }
  );
} else {
  breadcrumbItems.push(
    { name: 'Blog', url: 'https://musique-facile.fr/blog' },
    { name: title, url: url }
  );
}

// Formatage des dates pour schema.org
const isoDatePublished = new Date(datePublished).toISOString();
const isoDateModified = new Date(dateModified).toISOString();

// Construction du schema.org BlogPosting
const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": pageTitle,
  "description": pageDescription,
  "image": absoluteOgImage,
  "author": {
    "@type": "Person",
    "name": author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Musique Facile",
    "logo": {
      "@type": "ImageObject",
      "url": "https://musique-facile.fr/logo.webp"
    }
  },
  "datePublished": isoDatePublished,
  "dateModified": isoDateModified,
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": url
  }
};

// Helper pour extraire ID YouTube
const extractYouTubeId = (url: string) => {
  if (url.includes('/shorts/')) {
    return url.split('/shorts/')[1].split('?')[0];
  }
  const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
  const match = url.match(regExp);
  return (match && match[2].length === 11) ? match[2] : null;
};

// Construction du schema VideoObject si vidéos présentes
const videoSchemas = videos && videos.length > 0 ? videos.map(video => {
  const videoId = extractYouTubeId(video.url);
  return {
    "@context": "https://schema.org",
    "@type": "VideoObject",
    "name": video.title || pageTitle,
    "description": video.description || pageDescription,
    "thumbnailUrl": video.thumbnail || (videoId ? `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg` : absoluteOgImage),
    "uploadDate": isoDatePublished,
    "contentUrl": video.url,
    "embedUrl": videoId ? `https://www.youtube.com/embed/${videoId}` : video.url,
    "duration": video.duration,
    "publisher": {
      "@type": "Organization",
      "name": "Musique Facile",
      "logo": {
        "@type": "ImageObject",
        "url": "https://musique-facile.fr/logo.webp"
      }
    }
  };
}) : [];

// Construction du schema HowTo pour les tutoriels
const howToSchema = songInfo ? {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": pageTitle,
  "description": pageDescription,
  "image": absoluteOgImage,
  "totalTime": songInfo.tempo ? `PT${Math.ceil(300 / (songInfo.tempo / 60))}M` : "PT15M", // Estimation basée sur le tempo
  "estimatedCost": {
    "@type": "MonetaryAmount",
    "currency": "EUR",
    "value": "0"
  },
  "supply": [
    {
      "@type": "HowToSupply",
      "name": theme === 'guitar' ? "Guitare" : theme === 'piano' ? "Piano" : theme === 'ukulele' ? "Ukulélé" : "Instrument de musique"
    }
  ],
  "tool": videos && videos.length > 0 ? [
    {
      "@type": "HowToTool",
      "name": "Vidéos tutoriels YouTube"
    }
  ] : [],
  "step": [
    {
      "@type": "HowToStep",
      "name": "Apprendre les accords",
      "text": `Maîtrisez les ${songInfo.chordCount || ''} accords nécessaires pour jouer ce morceau.`,
      "url": url,
      "image": absoluteOgImage
    },
    {
      "@type": "HowToStep",
      "name": "Pratiquer les transitions",
      "text": "Entraînez-vous aux transitions entre les accords lentement, puis augmentez progressivement le tempo.",
      "url": url,
      "image": absoluteOgImage
    },
    {
      "@type": "HowToStep",
      "name": "Travailler la rythmique",
      "text": songInfo.tempo ? `Travaillez la rythmique au tempo de ${songInfo.tempo} BPM avec un métronome.` : "Travaillez la rythmique avec un métronome.",
      "url": url,
      "image": absoluteOgImage
    },
    {
      "@type": "HowToStep",
      "name": "Jouer le morceau complet",
      "text": "Assemblez tous les éléments et jouez le morceau du début à la fin.",
      "url": url,
      "image": absoluteOgImage,
      "video": videos && videos.length > 0 ? {
        "@type": "VideoObject",
        "name": videos[0].title || pageTitle,
        "description": pageDescription,
        "thumbnailUrl": extractYouTubeId(videos[0].url) ? `https://img.youtube.com/vi/${extractYouTubeId(videos[0].url)}/maxresdefault.jpg` : absoluteOgImage,
        "contentUrl": videos[0].url,
        "uploadDate": isoDatePublished
      } : undefined
    }
  ],
  "author": {
    "@type": "Person",
    "name": author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Musique Facile",
    "logo": {
      "@type": "ImageObject",
      "url": "https://musique-facile.fr/logo.webp"
    }
  },
  "datePublished": isoDatePublished,
  "dateModified": isoDateModified
} : null;
---

<!doctype html>
<html lang="fr">
  <head>
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-NP758HSC');</script>
    <!-- End Google Tag Manager -->
    
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={pageDescription} />
    <meta name="author" content={author} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={url} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={absoluteOgImage} />
    <meta property="article:published_time" content={isoDatePublished} />
    <meta property="article:modified_time" content={isoDateModified} />
    <meta property="article:author" content={author} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={url} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={absoluteOgImage} />

    <!-- Schema.org BlogPosting -->
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />

    <!-- Schema.org VideoObject (si vidéos présentes) -->
    {videoSchemas.length > 0 && videoSchemas.map(videoSchema => (
      <script type="application/ld+json" set:html={JSON.stringify(videoSchema)} />
    ))}

    <!-- Schema.org HowTo (si tutoriel avec songInfo) -->
    {howToSchema && (
      <script type="application/ld+json" set:html={JSON.stringify(howToSchema)} />
    )}

    <ExternalResources />
    <title>{pageTitle}</title>
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NP758HSC"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
   <div class={`theme-${theme}`}>
    <Header />
    <Breadcrumbs items={breadcrumbItems} />
    <main>
      <slot />
    </main>
    {showAutoFaq && (
      <AutoFAQ title={title} theme={theme} songInfo={songInfo} showVisual={true} />
    )}
    <Footer />
   </div>
  </body>
</html>

<style is:global>
  /* Garder tous les styles précédents jusqu'à article-conclusion */

  .article-conclusion {
    position: relative;
    padding: 6rem 0;
    background: linear-gradient(135deg, var(--color-dark) 0%, #2a2a2a 100%);
    color: white;
    margin: 6rem 0;
    border-radius: var(--border-radius);
    overflow: hidden;
  }

  .article-conclusion::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, 
      var(--theme-current) 0%,
      var(--theme-current-light) 100%
    );
  }

  .article-conclusion::after {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.1;
    z-index: 0;
  }

  .conclusion-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .conclusion-content::before {
    content: '"';
    position: absolute;
    top: -30px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 6rem;
    font-family: Georgia, serif;
    color: var(--theme-current);
    opacity: 0.3;
    line-height: 1;
  }

  .conclusion-content h2 {
    color: var(--theme-current);
    font-size: 2.5rem;
    margin-bottom: 2rem;
    text-align: center;
    position: relative;
    padding-bottom: 1rem;
  }

  .conclusion-content h2::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 3px;
    background: var(--theme-current);
    border-radius: 2px;
  }

  .conclusion-content p {
    font-size: 1.2rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .conclusion-content p:last-child {
    margin-bottom: 0;
  }

  /* Garder tous les styles suivants (related-links, etc.) */

  .related-links {
    margin: 4rem auto;
    max-width: 800px;
    padding: 0 1.5rem;
  }

  .related-links h2 {
    margin-bottom: 2rem;
    color: var(--color-dark);
  }

  .related-links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .related-link {
    padding: 1.5rem;
    background: white;
    border-radius: var(--border-radius);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    text-decoration: none;
    color: var(--color-dark);
    transition: all 0.3s ease;
  }

  .related-link:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  @media (max-width: 768px) {
    .article-title {
      font-size: 2.5rem;
    }

    .article-meta {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }

    .conclusion-content {
      padding: 2rem;
      margin: 0 1rem;
    }

    .conclusion-content h2 {
      font-size: 2rem;
    }

    .conclusion-content::before {
      font-size: 4rem;
      top: -20px;
    }
  }

  /* Styles spécifiques aux articles de blog */
  .article-hero {
    min-height: 60vh;
    position: relative;
    display: flex;
    align-items: center;
    padding: 8rem 0 4rem;
    background-color: var(--color-dark);
    color: white;
    overflow: hidden;
  }

  .article-hero-bg {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    opacity: 0.3;
    z-index: 0;
  }

  .article-hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
    text-align: center;
    background: rgba(0, 0, 0, 0.7);
    border-radius: var(--border-radius);
    padding: 2rem;
    backdrop-filter: blur(10px);
  }

  .article-meta {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .article-title {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    color: white;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .article-description {
    font-size: 1.2rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .article-content {
    margin: 4rem auto;
    padding: 0 1.5rem;
  }

  /* Sans TOC, largeur normale */
  .article-content:not(.with-toc) {
    max-width: 800px;
  }

  .article-intro {
    font-size: 1.2rem;
    line-height: 1.8;
    margin-bottom: 3rem;
    color: var(--color-dark);
  }

  .video-section {
    display: none; /* Caché par défaut */
    padding: 4rem 0;
    background: linear-gradient(135deg, var(--color-dark) 0%, #2a2a2a 100%);
    color: white;
    margin: 4rem 0;
  }

  /* Afficher la section vidéo uniquement si elle contient des vidéos */
  .video-section:has(.video-item) {
    display: block;
  }

  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .video-item {
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius);
    overflow: hidden;
  }

  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .podcast-section {
    display: none; /* Caché par défaut */
    padding: 4rem 0;
    background: linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%);
    margin: 4rem 0;
  }

  /* Afficher la section podcast uniquement si elle contient un podcast */
  .podcast-section:has(iframe) {
    display: block;
  }

  .podcast-player {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    background: white;
    border-radius: var(--border-radius);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }
</style>
