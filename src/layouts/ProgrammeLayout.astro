---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource/poppins';
import '@fontsource/raleway';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  ogImage: string;
  theme?: 'guitar' | 'piano' | 'ukulele' | 'solfege';
  url: string;
  author?: string;
  datePublished?: string;
  dateModified?: string;
  price?: string;
  duration?: string;
  provider?: {
    name: string;
    url: string;
    logo: string;
  };
}

const {
  title,
  description,
  ogImage,
  theme = 'guitar',
  url,
  author = 'Musique Facile',
  datePublished = new Date().toISOString(),
  dateModified = new Date().toISOString(),
  price = '99 EUR',
  duration = 'P20H', // Format ISO 8601 pour la durée
  provider = {
    name: 'Musique Facile',
    url: 'https://musique-facile.fr',
    logo: 'https://musique-facile.fr/logo.jpg'
  }
} = Astro.props;

// Construction du schema.org amélioré
const schema = {
  "@context": "https://schema.org",
  "@type": "Course",
  "name": title,
  "description": description,
  "provider": {
    "@type": "Organization",
    "name": provider.name,
    "url": provider.url,
    "logo": {
      "@type": "ImageObject",
      "url": provider.logo
    }
  },
  "author": {
    "@type": "Organization",
    "name": author
  },
  "datePublished": datePublished,
  "dateModified": dateModified,
  "url": url,
  "image": ogImage,
  "inLanguage": "fr-FR",
  "offers": {
    "@type": "Offer",
    "price": price.split(' ')[0],
    "priceCurrency": "EUR",
    "availability": "https://schema.org/InStock"
  },
  "timeRequired": duration,
  "educationalLevel": "Beginner",
  "teaches": ["Guitare", "Musique"],
  "hasCourseInstance": {
    "@type": "CourseInstance",
    "courseMode": "online",
    "courseWorkload": "PT1H30M per week"
  }
};
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- SEO Meta Tags -->
    <title>{title} | Musique Facile</title>
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={url} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Musique Facile" />
    <meta property="og:locale" content="fr_FR" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </head>
  <body>
    <div class={`theme-${theme}`}>
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

